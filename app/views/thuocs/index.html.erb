<p id="notice"><%= notice %></p>

<h1>Thuocs</h1>

<table>
  <thead>
    <tr>
      <th>Tenthuoc</th>
      <th>Ghichu</th>
      <th>Congdung</th>
      <th>Idnhasanxuat</th>
      <th>Idnhacungcap</th>
      <th>Idloai</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @thuocs.each do |thuoc| %>
      <tr>
        <td><%= thuoc.tenthuoc %></td>
        <td><%= thuoc.ghichu %></td>
        <td><%= thuoc.congdung %></td>
        <td><%= thuoc.idnhasanxuat %></td>
        <td><%= thuoc.idnhacungcap %></td>
        <td><%= thuoc.idloai %></td>
        <td><%= link_to 'Show', thuoc %></td>
        <td><%= link_to 'Edit', edit_thuoc_path(thuoc) %></td>
        <td><%= link_to 'Destroy', thuoc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

